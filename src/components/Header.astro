---
const navLinks = [
  { label: 'HOME', href: '#home' },
  { label: 'NEWS', href: '#news' },
  { label: 'SERVICE', href: '#services' },
  { label: 'PARTNER-SERVICE', href: '#partner-services' },
  { label: 'GALLERY', href: '#gallery' },
  { label: 'MENU', href: '#menu' },
  { label: 'CONTACT', href: '#contact' },
  { label: 'ACCESS-MAP', href: '#access-map' }
];
---

<header class="site-header">
  <div class="container header__content">
    <a class="logo" href="#home" aria-label="JOYPRODUCT ホーム">
      <span class="logo__mark">JOY</span>
      <span class="logo__type">PRODUCT</span>
    </a>
    <div class="header__nav">
      <input type="checkbox" id="nav-toggle" class="nav__checkbox" />
      <label for="nav-toggle" class="nav__toggle" aria-label="メニューを開閉">
        <span></span>
        <span></span>
        <span></span>
      </label>
      <nav class="nav" aria-label="メインメニュー">
        <ul>
          {navLinks.map((item) => (
            <li>
              <a href={item.href}>{item.label}</a>
            </li>
          ))}
        </ul>
      </nav>
    </div>
  </div>
</header>

<script is:inline>
  const navToggle = document.getElementById('nav-toggle');
  const navLinks = Array.from(document.querySelectorAll('.nav a'));
  navLinks.forEach((link) => {
    link.addEventListener('click', () => {
      if (navToggle) navToggle.checked = false;
    });
  });
</script>

<style>
  .site-header {
    position: sticky;
    top: 0;
    z-index: 100;
    background: rgba(246, 248, 252, 0.96);
    backdrop-filter: blur(16px);
    border-bottom: 1px solid rgba(215, 220, 226, 0.8);
  }

  .header__content {
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 1.5rem;
    min-height: 76px;
  }

  .logo {
    display: inline-flex;
    align-items: center;
    gap: 0.45rem;
    font-weight: 800;
    letter-spacing: 0.28em;
    font-size: 0.95rem;
    color: var(--color-primary);
  }

  .logo__mark {
    background: var(--color-primary);
    color: #fff;
    padding: 0.55rem 0.65rem 0.45rem;
    border-radius: 12px;
    font-size: 0.75rem;
    letter-spacing: 0.3em;
  }

  .logo__type {
    color: var(--color-text);
  }

  .header__nav {
    position: relative;
    display: flex;
    align-items: flex-end;
    gap: 1.5rem;
  }

  .nav {
    display: flex;
    align-items: flex-end;
  }

  .nav ul {
    display: grid;
    grid-template-columns: repeat(4, max-content);
    gap: 0.6rem 1.6rem;
    list-style: none;
    margin: 0;
    padding: 0;
    justify-content: end;
    text-align: right;
  }

  .nav a {
    font-size: 0.85rem;
    letter-spacing: 0.18em;
    font-weight: 600;
    text-transform: uppercase;
    color: var(--color-muted);
  }

  .nav a:hover {
    color: var(--color-primary);
  }

  .nav__checkbox {
    position: absolute;
    width: 1px;
    height: 1px;
    margin: -1px;
    padding: 0;
    border: 0;
    clip: rect(0, 0, 0, 0);
    overflow: hidden;
  }

  .nav__toggle {
    display: none;
    width: 42px;
    height: 42px;
    border-radius: 50%;
    align-items: center;
    justify-content: center;
    border: 1px solid rgba(0, 89, 255, 0.2);
    background: rgba(255, 255, 255, 0.9);
    cursor: pointer;
    position: relative;
    transition: background 0.2s ease, border-color 0.2s ease;
  }

  .nav__toggle span {
    position: absolute;
    width: 18px;
    height: 2px;
    background: var(--color-text);
    border-radius: 999px;
    transition: transform 0.2s ease, opacity 0.2s ease;
  }

  .nav__toggle span:nth-child(1) {
    transform: translateY(-6px);
  }

  .nav__toggle span:nth-child(2) {
    transform: translateY(0);
  }

  .nav__toggle span:nth-child(3) {
    transform: translateY(6px);
  }

  .nav__toggle:focus {
    outline: 2px solid var(--color-primary);
    outline-offset: 4px;
  }

  @media (max-width: 960px) {
    .nav__toggle {
      display: inline-flex;
    }

    .nav {
      position: fixed;
      inset: 80px 18px auto;
      background: rgba(255, 255, 255, 0.96);
      border-radius: 20px;
      padding: 1.8rem;
      flex-direction: column;
      align-items: stretch;
      gap: 1.8rem;
      box-shadow: var(--shadow-lg);
      transform: translateY(-140%);
      transition: transform 0.3s ease;
    }

    .nav ul {
      display: flex;
      flex-direction: column;
      gap: 1.1rem;
      align-items: flex-start;
      text-align: left;
    }

    .nav a {
      font-size: 0.82rem;
      letter-spacing: 0.12em;
    }

    .nav__checkbox:checked ~ .nav {
      transform: translateY(0);
    }

    .nav__checkbox:checked + .nav__toggle span:nth-child(1) {
      transform: rotate(45deg);
    }

    .nav__checkbox:checked + .nav__toggle span:nth-child(2) {
      opacity: 0;
    }

    .nav__checkbox:checked + .nav__toggle span:nth-child(3) {
      transform: rotate(-45deg);
    }
  }
</style>
