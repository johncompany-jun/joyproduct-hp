---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

interface Props {
  title: string;
  description: string;
  className?: string;
}

const { title, description, className = '' } = Astro.props as Props;
---

<!doctype html>
<html lang="ja">
  <head>
    <BaseHead title={title} description={description} />
  </head>
  <body>
    <a class="skip" href="#main">コンテンツへスキップ</a>
    <Header />
    <main id="main" class:list={[ 'page', className ]}>
      <slot />
    </main>
    <Footer />
  </body>
</html>

<style>
  .skip {
    position: absolute;
    left: -999px;
    top: -999px;
    padding: 0.75rem 1.25rem;
    background: var(--color-primary);
    color: #fff;
    border-radius: 999px;
    z-index: 200;
  }

  .skip:focus {
    left: 1rem;
    top: 1rem;
  }

  .page {
    display: flex;
    flex-direction: column;
    gap: clamp(4rem, 7vw, 6rem);
  }
</style>
