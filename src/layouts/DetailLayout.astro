---
import MainLayout from './MainLayout.astro';
import { SITE_TITLE } from '../consts';

interface Props {
  title: string;
  description: string;
  tag?: string;
  date?: string;
  className?: string;
}

const { title, description, tag, date, className = '' } = Astro.props as Props;
---

<MainLayout
  title={`${title} | ${SITE_TITLE}`}
  description={description}
  className={`detail-page ${className}`.trim()}
>
  <article class="detail">
    <header class="detail__header">
      {tag ? <span class="tag detail__tag">{tag}</span> : null}
      <h1 class="detail__title">{title}</h1>
      {date ? (
        <time class="detail__date" dateTime={date.replace(/\./g, '-')}>{date}</time>
      ) : null}
      <p class="detail__lead">{description}</p>
    </header>
    <div class="detail__body">
      <slot />
    </div>
  </article>
</MainLayout>

<style>
  .detail {
    display: grid;
    gap: clamp(2rem, 4vw, 3rem);
    max-width: min(820px, 100%);
    margin: 0 auto;
  }

  .detail__header {
    display: grid;
    gap: 1rem;
  }

  .detail__tag {
    letter-spacing: 0.18em;
  }

  .detail__title {
    font-size: clamp(1.8rem, 3.6vw, 2.6rem);
    line-height: 1.2;
    margin: 0;
  }

  .detail__date {
    font-size: 0.9rem;
    letter-spacing: 0.18em;
    color: var(--color-muted);
    text-transform: uppercase;
  }

  .detail__lead {
    margin: 0;
    font-size: 1.05rem;
    color: var(--color-muted);
    line-height: 1.7;
  }

  .detail__body {
    display: grid;
    gap: 1.4rem;
    line-height: 1.85;
  }

  .detail__body h2,
  .detail__body h3 {
    margin: 2.2rem 0 0.8rem;
  }

  .detail__body ul,
  .detail__body ol {
    padding-left: 1.4rem;
    display: grid;
    gap: 0.6rem;
  }

  .detail__body blockquote {
    border-left: 4px solid var(--color-primary);
    padding-left: 1rem;
    color: var(--color-muted);
    font-style: italic;
  }

  .detail__body a {
    color: var(--color-primary);
  }

  @media (max-width: 720px) {
    .detail {
      padding-left: 0.5rem;
      padding-right: 0.5rem;
    }
  }
</style>
